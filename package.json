{
  "name": "mobx-loader",
  "version": "0.0.0",
  "description": "Reactively check if an async function is running",
  "keywords": [
    "mobx",
    "loading",
    "async",
    "react",
    "loader"
  ],
  "main": "index.js",
  "scripts": {
    "test": "mocha --package package.json",
    "nt": "nodemon --exec npm run test",
    "coverage": "nyc npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielcjacks/mobx-loader.git"
  },
  "author": "Daniel Jacks",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danielcjacks/mobx-loader/issues"
  },
  "homepage": "https://github.com/danielcjacks/mobx-loader#readme",
  "contributors": [
    {
      "name": "Daniel Jacks",
      "email": "danielchaimjacks@gmail.com"
    }
  ],
  "dependencies": {
    "mobx": ">=4.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.19",
    "chai": "^4.3.6",
    "mocha": "^9.2.0",
    "nyc": "^15.1.0",
    "sucrase": "^3.20.3"
  },
  "mocha": {
    "require": [
      "sucrase/register/ts"
    ],
    "spec": "src/**/*.test.ts",
    "timeout": 0
  },
  "nodemonConfig": {
    "verbose": true,
    "legacyWatch": true,
    "ignore": [
      "node_modules",
      "build"
    ],
    "watch": [
      "./"
    ],
    "exec": "npm test",
    "ext": "ts, js, jsx"
  }
}
